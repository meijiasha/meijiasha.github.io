rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow read/write for authenticated users on stores_taipei (Legacy)
    match /stores_taipei/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow public read, auth write for stores (New)
    match /stores/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // User data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
